<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="audio.rabid.dev.sampleapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controllers.author.AuthorsActivity"
            android:label="@string/title_activity_author"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".controllers.author.EditAuthorActivity" >
        </activity>
        <activity android:name=".controllers.author.AuthorActivity" >
        </activity>
        <activity android:name=".controllers.posts.PostActivity" >
        </activity>
        <activity
            android:name=".controllers.posts.PostsActivity"
            android:label="@string/title_activity_posts"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".controllers.posts.EditPostActivity" >
        </activity>
    </application>

</manifest>
